<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.geome.geomepres.Exercise"
    android:background="@drawable/whitewall">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/guess1"
        android:layout_marginBottom="27dp"
        android:layout_above="@+id/guess3"
        android:layout_alignStart="@+id/question"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/guess2"
        android:layout_alignBottom="@+id/guess1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/guess3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/guess1"
        android:textSize="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/guess4"
        android:layout_alignBottom="@+id/guess3"
        android:layout_alignStart="@+id/guess2"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:src="@drawable/pizzas22"
        android:layout_above="@+id/question"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What is the length of edge X?"
        android:id="@+id/question"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#cd000000"
        android:layout_above="@+id/guess1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Timer"
        android:id="@+id/timer"
        android:textSize="24dp"
        android:textIsSelectable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1/10"
        android:id="@+id/questionCounter"
        android:textSize="34dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/guess2"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:layout_alignBottom="@+id/questionCounter"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
